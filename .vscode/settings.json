{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "editor.tabSize": 2, // Mengatur lebar tab (dalam spasi)
  "editor.insertSpaces": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.experimental.aiQuickFix": true,
  "typescript.experimental.tsserver.web.typeAcquisition.enabled": true,
  "typescript.format.insertSpaceAfterConstructor": false,
  "typescript.format.semicolons": "remove",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true // Gunakan spasi sebagai pengganti tab
}
